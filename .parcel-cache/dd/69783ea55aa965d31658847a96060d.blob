    <script defer="" data-parcel-key="97969586cce64aa01ef669596b08c9db">
      import * as model from './src/js/model.js';

      const bdy = document.querySelector('body');
      function showRecipe(){
        const id = window.location.hash.slice();
        console.log(window.location.hash)
        const currentRecipe = model.state.recipes[id];
        const markup = `
    <div class="flex flex-wrap md items-center h-screen">
    <div class="bg-white w-full md:w-1/2 h-screen">
      <div class="mx-32">
        <h1 id="recipe-title" class="text-6xl font-bold mt-16"> ${
          currentRecipe.name
        }</h1>
  
        <!-- country region island -->
        <div class="flex mt-16 font-light text-gray-500">
        ${currentRecipe.tags.map(tag => {
          return;
          ` <div class="pr-4">
            <p class="text-2xl text-gray-900 font-semibold pt-2">${tag}</p>
          </div> `;
        })}
        </div>
  
        <!-- description -->
        <div
          id="recipe-preparation"
          class="description w-full sm: md:w-2/3 mt-16 text-gray-500 text-sm"
        >
        ${currentRecipe.preparation.map(step => {
          return;
          ` <div class="pr-4">
            <p class="text-2xl text-gray-900 font-semibold pt-2">${step}</p>
          </div> `;
        })}
        </div>
        <div>
          <ul id="recipe-ingredients">
          ${currentRecipe.ingredients.map(ing => {
            return;
            ` 
              <li class="text-2xl text-gray-900 font-semibold pt-2">${ing}</li>
            `;
          })}
          </ul>
        </div>
  
        <div id="recipe-reviews">
        ${currentRecipe.reviews.map(review => {
          return `
          <div class="pr-4">
          <span class="uppercase">${review.writer}</span>
          <p class="text-2xl text-gray-900 font-semibold pt-2">${review.review}</p>
        </div>
          `;
        })}
  
        </div>
      </div>
    </div>
    <div class="bg-red-600 w-full md:w-1/2 h-screen">
      <img
        id="recipe-image"
        src=${currentRecipe.images[0]}
        class="h-screen w-full"
        alt=""
      />
    </div>
  </div>
    `;


          bdy.insertAdjacentHTML('afterbegin', markup);
      };
      showRecipe()
    </script>
    <title>Detail</title>
  </head>
