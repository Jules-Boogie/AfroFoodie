<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="493599ded8444393dd90c1ccf697aad6" rel="stylesheet">

    <link href="398c8cacd1491967ce0d758d063268b5" rel="stylesheet">
    <link rel="stylesheet" href="bfa16f42ab040389c62fd0931d259a39">
    <script defer="" src="8f0cfd4e2d8d3233329ab64eec063cd6" data-auto-a11y="true"></script>

    <title>Detail</title>
  </head>
  <body>
    <div class="main"></div>
    <script data-parcel-key="43d8f4dd4454b7827a76caaf2170ce85">
      import * as model from './src/js/model.js';

      const main = document.querySelector('.main');
      console.log(main);
      function showRecipe() {
        const id = window.location.hash.slice(1);
        const currentRecipe = model.state.recipes[id];
        const markup = `
    <div class="flex flex-wrap md bg-white items-center h-screen">
    <div class="bg-white w-full md:w-1/2 h-screen">
      <div class="mx-32">
        <h1 class="text-6xl text-black font-bold mt-16"> ${currentRecipe.name}</h1>
        <!-- country region island -->
        <div class="flex mt-16 font-light text-gray-500">
        ${currentRecipe.tags.map(tag => {
          return` <div class="pr-4">
            <p class="text-2xl text-gray-900 font-semibold pt-2">${tag}</p>
          </div> `;
        })}
        </div>
  
        <!-- description -->
        <div
          id="recipe-preparation"
          class="description w-full sm: md:w-2/3 mt-16 text-gray-500 text-sm"
        >
        ${currentRecipe.preparation.map(step => {
          return` <div class="pr-4">
            <p class="text-sm text-gray-900 font-semibold pt-2">${step}</p>
          </div> `;
        })}
        </div>
        <div>
          <h2> Ingredients 
          <ul id="recipe-ingredients">
          ${currentRecipe.ingredients.map(ing => {
            return` 
              <li class="text-sm text-gray-900 font-semibold pt-2">${ing}</li>
            `;
          })}
          </ul>
        </div>
  

      </div>
    </div>
    <div class="w-full md:w-1/2 h-screen">
      <img
        id="recipe-image"
        src=${currentRecipe.images[0]}
        class="h-108 w-full object-cover"
        alt=""
      />
      <div id="recipe-reviews">
        <h2> Reviews </h2>
        ${currentRecipe.reviews.map(review => {
          return `
          <div class="pr-4">
          <span class="uppercase">${review.writer}</span>
          <p class="text-2xl text-gray-900 font-semibold pt-2">${review.review}</p>
        </div>
          `;
        })}
  
        </div>
    </div>
  </div>
    `;

        main.insertAdjacentHTML('afterbegin', markup);
      }
      showRecipe();
    </script>
  </body>
</html>
